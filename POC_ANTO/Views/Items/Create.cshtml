@model POC_ANTO.Models.Item

@{
    ViewData["Title"] = "Create";
    Layout = "formLayout";
}

<style>
    .gradient-custom {
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</style>
<section class=" gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form asp-action="Create">
                            <h3 class="mb-5">Invoice Line Items</h3>

                            <div class="form-outline mb-4">
                                <label asp-for="ItemName" class="form-label"></label>
                                <input asp-for="ItemName" class="form-control form-control-lg" />

                                <span asp-validation-for="ItemName" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="Quantity" class="form-label"></label>
                                <input asp-for="Quantity" class="form-control form-control-lg" />

                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="UnitCost" class="form-label"></label>
                                <input asp-for="UnitCost" class="form-control form-control-lg" />

                                <span asp-validation-for="UnitCost" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="ItemAmount" class="form-label"></label>
                                <input asp-for="ItemAmount" class="form-control form-control-lg" />

                                <span asp-validation-for="ItemAmount" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label asp-for="InvoiceID" class="control-label"></label>
                                <select asp-for="InvoiceID" class="form-control" asp-items="ViewBag.InvoiceID"></select>
                            </div>
                            <div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block" value="Create">Create</button>
                            </div>
                            <hr class="my-4">
                            <div>
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
